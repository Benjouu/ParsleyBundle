<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jben87_parsley.trigger_event">blur</parameter>
    </parameters>

    <services>
        <!-- ADAPTERS -->
        <service id="jben87_parsley.form.adapter.constraints" class="JBen87\ParsleyBundle\Form\Adapter\ConstraintsAdapter">
            <argument type="service" id="translator" />
        </service>

        <!-- EXTENSIONS -->
        <service id="jben87_parsley.form.extension.parsley_constraints_type" class="JBen87\ParsleyBundle\Form\Extension\ParsleyConstraintsTypeExtension">
            <argument>%jben87_parsley.trigger_event%</argument>
            <tag name="form.type_extension" alias="form" />
        </service>

        <!-- TYPES -->
        <service id="jben87_parsley.form.type.abstract" class="JBen87\ParsleyBundle\Form\Type\AbstractType" abstract="true">
            <argument type="service" id="jben87_parsley.form.adapter.constraints" />
        </service>
    </services>

</container>
